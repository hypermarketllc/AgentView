# Production environment variables
# Copy this file to .env.production and update the values

# Node.js environment
NODE_ENV=development

# Server settings
PORT=3000
BASE_URL=https://your-domain.com/crm

# Use PostgreSQL instead of Supabase
VITE_USE_POSTGRES=true
USE_POSTGRES=true

# Supabase credentials (kept for reference but not used)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database connection
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=crm_db
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=your_strong_password_here

# JWT Secret for authentication
JWT_SECRET=your_strong_jwt_secret_here

# External ports (for Docker Compose)
APP_PORT=3000
DB_PORT=5432


# Admin Login Details
ADMIN_EMAIL=admin@americancoverageceneter.com
ADMIN_PASSWORD=Discord101!

DB_URL=postgres://crm_user:your_strong_password_here@db:5432/crm_db
